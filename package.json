{
  "name": "@snowstorm/root",
  "version": "0.0.0-beta.1",
  "private": "true",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "run-s -l build:*",
    "build:core": "yarn workspace @snowstorm/core run build ",
    "build:cli": "yarn workspace @snowstorm/cli run build",
    "build:serverprops": "yarn workspace @snowstorm/serverprops run build",
    "build:head": "yarn workspace @snowstorm/head run build",
    "watch": "run-p -l watch:*",
    "watch:core": "yarn workspace @snowstorm/core run watch",
    "watch:cli": "yarn workspace @snowstorm/cli run watch",
    "watch:serverprops": "yarn workspace @snowstorm/serverprops run watch",
    "watch:head": "yarn workspace @snowstorm/head run watch",
    "docs:deploy": "yarn workspace @snowstorm/docs run deploy",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@explodingcamera/eslint-config": "^16.4.1",
    "eslint": "^7.27.0",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^3.4.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "rimraf": "^3.0.2"
  }
}
