{
  "name": "@snowstorm/root",
  "version": "0.1.3",
  "private": true,
  "repository": "explodingcamera/snowstorm",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "watch": "nx run-many --target=watch --all --parallel --skip-nx-cache",
    "watch:core": "nx run @snowstorm/core:watch",
    "watch:cli": "nx run @snowstorm/cli:watch",
    "watch:serverprops": "nx run @snowstorm/serverprops:watch",
    "watch:head": "nx run @snowstorm/head:watch"
  },
  "dependencies": {
    "@explodingcamera/eslint-config": "^20.1.0",
    "eslint": "^8.6.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.32.5",
    "@auto-it/conventional-commits": "^10.32.5",
    "@auto-it/npm": "^10.32.5",
    "@nrwl/cli": "^13.4.3",
    "@nrwl/tao": "^13.4.3",
    "@nrwl/workspace": "^13.4.3",
    "auto": "^10.32.5",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postinstall-postinstall": "^2.1.0",
    "rimraf": "^3.0.2"
  },
  "auto": {
    "onlyPublishWithReleaseLabel": true,
    "baseBranch": "main",
    "plugins": [
      "npm",
      "all-contributors",
      [
        "conventional-commits",
        {
          "defaultReleaseType": "patch"
        }
      ],
      "released"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "17.0.38"
    }
  }
}
