{
  "name": "@snowstorm/root",
  "version": "0.0.0-beta.1",
  "private": "true",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "run-s -l build:*",
    "build:core": "pnpm run --filter \"@snowstorm/core\" build ",
    "build:cli": "pnpm run --filter \"@snowstorm/cli\" build",
    "build:serverprops": "pnpm run --filter \"@snowstorm/serverprops\" build",
    "build:head": "pnpm run --filter \"@snowstorm/head\" build",
    "watch": "run-p -l watch:*",
    "watch:core": "pnpm run --filter \"@snowstorm/core\" watch",
    "watch:cli": "pnpm run --filter \"@snowstorm/cli\" watch",
    "watch:serverprops": "pnpm run --filter \"@snowstorm/serverprops\" watch",
    "watch:head": "pnpm run --filter \"@snowstorm/head\" watch",
    "docs:deploy": "pnpm run --filter \"@snowstorm/docs\" deploy"
  },
  "dependencies": {
    "@explodingcamera/eslint-config": "^18.0.0",
    "eslint": "^7.32.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postinstall-postinstall": "^2.1.0",
    "rimraf": "^3.0.2"
  }
}
