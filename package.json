{
  "name": "@snowstorm/root",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "lint": "eslint packages/ --fix --quiet",
    "test": "nx run-many --target=test --all --parallel",
    "watch": "nx run-many --target=watch --all --parallel --skip-nx-cache",
    "watch:core": "nx run @snowstorm/core:watch",
    "watch:cli": "nx run @snowstorm/cli:watch",
    "watch:serverprops": "nx run @snowstorm/serverprops:watch",
    "www:export": "nx run @snowstorm/www:export",
    "watch:head": "nx run @snowstorm/head:watch"
  },
  "dependencies": {
    "@explodingcamera/eslint-config": "^21.0.1",
    "eslint": "^8.9.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.32.6",
    "@auto-it/conventional-commits": "^10.32.6",
    "@auto-it/npm": "^10.32.6",
    "@nrwl/cli": "^13.8.2",
    "@nrwl/tao": "^13.8.2",
    "@nrwl/workspace": "^13.8.2",
    "@octokit/core": "^3.5.1",
    "@types/node": "^17.0.18",
    "@types/tap": "^15.0.5",
    "auto": "^10.32.6",
    "esbuild": "^0.14.22",
    "eslint-plugin-prettier": "^4.0.0",
    "global-jsdom": "^8.4.0",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postinstall-postinstall": "^2.1.0",
    "rimraf": "^3.0.2",
    "tap": "^15.1.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "auto": {
    "onlyPublishWithReleaseLabel": true,
    "baseBranch": "main",
    "plugins": [
      "npm",
      "all-contributors",
      [
        "conventional-commits",
        {
          "defaultReleaseType": "patch"
        }
      ],
      "released"
    ]
  }
}
