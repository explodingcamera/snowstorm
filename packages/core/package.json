{
  "name": "@snowstorm/core",
  "version": "0.16.0",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "description": "The lightning-fast and minimalist React Framework",
  "type": "module",
  "repository": "explodingcamera/snowstorm",
  "bugs": "https://github.com/explodingcamera/snowstorm/issues",
  "homepage": "https://snowstorm.js.org",
  "exports": {
    "./server": "./server.js",
    "./server.js": "./server.js",
    "./server/export": "./server/export/index.js",
    "./server/export/index.js": "./server/export/index.js",
    ".": "./index.js",
    "./client/": "./client/",
    "./types": "./types.d.ts",
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./base.css": "./base.css"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "tsconfig.base.json",
    "types.d.ts",
    "index.js",
    "base.css",
    "index.d.ts",
    "server.js",
    "server.d.ts",
    "client/",
    "server/",
    "assets/",
    "chunks/"
  ],
  "scripts": {
    "build": "run-s clean build-all",
    "build-all": "run-p --print-label build:** types",
    "build:client": "esbuild src/client/index.tsx src/client/load-html.tsx src/client/_error.tsx src/client/router/index.tsx --bundle --outdir=client --platform=node --target=node16 --format=esm --metafile=client.meta.json --external:_snowstorm* --external:@snowstorm/* --external:react --external:react-dom --minify",
    "build:index": "esbuild src/index.ts --outdir=. --platform=node --target=node16 --format=esm --minify",
    "build:server": "esbuild src/server.ts src/server/export/index.ts --bundle --splitting --chunk-names=chunks/[name]-[hash] --outdir=. --platform=node --target=node16 --format=esm --metafile=server.meta.json --external:typescript --external:@snowstorm/* --external:react-ssr-prepass --external:node-fetch --external:vite --external:@vitejs/* --external:@explodingcamera/youch --external:write-file-atomic --banner:js='import { createRequire as topLevelCreateRequire } from \"module\";\n const require = topLevelCreateRequire(import.meta.url);'",
    "clean": "rimraf -rf index.d.ts index.js index.js.map server.d.ts server.js server.meta.json client.meta.json server/ client/ chunks/ lib/",
    "types": "run-p --print-label types:**",
    "types:client": "tsc -p tsconfig.client.json",
    "types:server": "tsc -p tsconfig.server.json",
    "test": "tap --ts --node-arg=--no-warnings --node-arg=--loader=ts-node/esm",
    "watch": "run-p --print-label \"build:** -- --watch\""
  },
  "dependencies": {
    "@explodingcamera/youch": "3.1.0-fix",
    "@rollup/pluginutils": "4.2.0",
    "@snowstorm/head": "link:../head",
    "@snowstorm/router": "link:../router",
    "@types/write-file-atomic": "4.0.0",
    "@vitejs/plugin-react": "1.2.0",
    "react-ssr-prepass": "1.5.0",
    "rollup": "2.70.0",
    "tslog": "3.3.2",
    "vite": "2.8.6",
    "write-file-atomic": "^4.0.1"
  },
  "devDependencies": {
    "@types/koa": "2.13.4",
    "@types/koa-compress": "4.0.3",
    "@types/koa-logger": "3.1.2",
    "@types/koa-mount": "4.0.1",
    "@types/koa-static": "4.0.2",
    "@types/mock-fs": "4.13.1",
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.13",
    "@types/website-scraper": "1.2.6",
    "chokidar": "3.5.3",
    "deepmerge": "4.2.2",
    "esbuild": "0.14.25",
    "esbuild-visualizer": "0.3.1",
    "fast-glob": "3.2.11",
    "koa": "2.13.4",
    "koa-compress": "5.1.0",
    "koa-connect": "2.1.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-static": "5.0.0",
    "mock-fs": "5.1.2",
    "node-fetch": "3.2.2",
    "react": "18.0.0-rc.2",
    "react-dom": "18.0.0-rc.2",
    "type-fest": "2.12.0",
    "website-scraper": "npm:@explodingcamera/website-scraper@5"
  },
  "peerDependencies": {
    "react": "18.0.0-rc.2",
    "react-dom": "18.0.0-rc.2",
    "sass": "1.3.0",
    "typescript": "^4.6.0"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "typescript": {
      "optional": false
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
